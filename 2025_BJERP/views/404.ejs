<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Belgian Jewels 404 Not Found</title>
  <style>
    /* Reset and full-page settings */
    body, html {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      background: radial-gradient(circle, #2c3e50, #000);
      font-family: 'Arial', sans-serif;
    }
    
    /* Centered 404 message */
    #message {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #f1c40f;
      font-size: 3em;
      text-align: center;
      z-index: 100;
      text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
      line-height: 1.2;
    }
    
    /* Common styles for animated shapes */
    .diamond, .jewel {
      position: absolute;
      opacity: 0;
      pointer-events: none;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }
    
    /* Diamond styles: a square rotated to form a diamond */
    .diamond {
      background: linear-gradient(45deg, #f39c12, #e74c3c);
      transform: rotate(45deg);
    }
    
    /* Jewel styles: a circular shape with a radial gradient */
    .jewel {
      background: radial-gradient(circle, #9b59b6, #8e44ad);
      border-radius: 50%;
    }
    
    /* Keyframes for diamonds moving from left to right */
    @keyframes moveDiamond {
      0% {
        transform: translateX(-100px) rotate(45deg) scale(0.5);
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      100% {
        transform: translateX(120vw) rotate(45deg) scale(1);
        opacity: 0;
      }
    }
    
    /* Keyframes for jewels moving from left to right */
    @keyframes moveJewel {
      0% {
        transform: translateX(-100px) scale(0.5);
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      100% {
        transform: translateX(120vw) scale(1);
        opacity: 0;
      }
    }
  </style>
</head>
<body>
  <div id="message">Belgian Jewels<br>404 Not Found</div>
  
  <script>
    (function(){
      const numDiamonds = 30; // number of diamond elements
      const numJewels = 20;   // number of jewel elements
      
      // Function to create an animated diamond
      for (let i = 0; i < numDiamonds; i++) {
        let diamond = document.createElement('div');
        diamond.classList.add('diamond');
        // Random size between 15 and 35px
        const size = Math.floor(Math.random() * 20) + 15;
        diamond.style.width = size + 'px';
        diamond.style.height = size + 'px';
        // Random vertical position (0 to 100vh)
        diamond.style.top = Math.random() * 100 + 'vh';
        // Start off-screen to the left
        diamond.style.left = '-50px';
        // Random animation duration between 5 and 15 seconds
        const duration = Math.random() * 10 + 5;
        diamond.style.animation = `moveDiamond ${duration}s linear infinite`;
        // Random animation delay (0 to 5 seconds)
        diamond.style.animationDelay = Math.random() * 5 + 's';
        document.body.appendChild(diamond);
      }
      
      // Function to create an animated jewel
      for (let i = 0; i < numJewels; i++) {
        let jewel = document.createElement('div');
        jewel.classList.add('jewel');
        // Random size between 10 and 30px
        const size = Math.floor(Math.random() * 20) + 10;
        jewel.style.width = size + 'px';
        jewel.style.height = size + 'px';
        jewel.style.top = Math.random() * 100 + 'vh';
        jewel.style.left = '-50px';
        const duration = Math.random() * 10 + 5;
        jewel.style.animation = `moveJewel ${duration}s linear infinite`;
        jewel.style.animationDelay = Math.random() * 5 + 's';
        document.body.appendChild(jewel);
      }
    })();
  </script>
</body>
</html>
